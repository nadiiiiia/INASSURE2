<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Dashboard{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('am/lib/stroke-7/style.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('am/lib/jquery.nanoscroller/css/nanoscroller.css') }}"/><!--[if lt IE 9]><![endif]-->
        <link rel="stylesheet" type="text/css" href="{{ asset('am/lib/morrisjs/morris.css') }}"/>
        <link rel="stylesheet"  href="{{ asset('am/css/style.css') }}" type="text/css"/>

    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('am/lib/jquery/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('am/lib/jquery.nanoscroller/javascripts/jquery.nanoscroller.min.js') }}"  type="text/javascript"></script>
        <script src="{{ asset('am/js/main.js') }}"  type="text/javascript"></script>
        <script src="{{ asset('am/lib/bootstrap/dist/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('am/lib/raphael/raphael-min.js') }}"  type="text/javascript"></script>
        <script src="{{ asset('am/lib/morrisjs/morris.min.js') }}"  type="text/javascript"></script>
        <script src="{{ asset('am/js/app-charts-morris.js') }}"  type="text/javascript"></script>
        <script src="{{ asset('js/delete.js') }}"  type="text/javascript"></script>
        <script src="{{ asset('js/edit.js') }}"  type="text/javascript"></script>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.highcharts.com/highcharts.src.js"></script>
</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    {{ include('board/nav_top.html.twig') }}
    {{ include('board/nav_left.html.twig') }}
    <!--include tes top/left menus ici -->
{% endblock %}
<div class="am-content">
    {% block body %}
    {% block options %}
        <div class="container">
            <div class="row marginTop">
                <div class="col-md-2" id="nav-col">
                    <section id="col-left">
                        <div class="collapse navbar-collapse navbar-ex1-collapse" id="sidebar-nav">
                            <ul class="nav nav-pills nav-stacked">



                            </ul>
                        </div>
                    </section>
                </div>
                <div class="col-md-12 panel" id="content-wrapper">
                    <div class="col-lg-12" id="content">

                        {% block content %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>


    {% block AppAJ %}
        <script type="text/javascript">
            $(document).ready(function () {
                //initialize the javascript
                App.init();
                App.chartsMorris();
            });
        </script>
    {% endblock %}
    {% endblock %}
</div>

{% endblock %}
</body>
</html>
