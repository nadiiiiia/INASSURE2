{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Login</h3>
                </div>
                <div class="singin panel-body">
                    <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <div class="form-group">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
                        </div>

                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" id="password" name="_password" class="form-control" required="required"/>
                        </div>

                        <div class="am-checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <input type="submit" class="btn btn-space btn-primary"  id="_submit"   name="_submit"  value="{{ 'security.login.submit'|trans }}"/>

                    </form>
                </div>
            </div>
        </div>
    </div>

    {#{% if error %}#}
    {#<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
    {#{% endif %}#}
    {% if error %}
        {#<div class="alert alert-danger text-center" stlye="border-radius:2px;">Login ou mot de passe incorrect</div>#}
        <div class=" alert-danger text-center">Login ou mot de passe incorrect</div>
    {% endif %}
{% endblock fos_user_content %}

{% block javascripts %}
    <script src="{{ asset('am/lib/jquery/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('am/lib/jquery.nanoscroller/javascripts/jquery.nanoscroller.min.js') }}"  type="text/javascript"></script>
    <script src="{{ asset('am/js/main.js') }}"  type="text/javascript"></script>
    <script src="{{ asset('am/lib/bootstrap/dist/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('am/lib/raphael/raphael-min.js') }}"  type="text/javascript"></script>
    <script src="{{ asset('am/lib/morrisjs/morris.min.js') }}"  type="text/javascript"></script>
    <script src="{{ asset('am/js/app-charts-morris.js') }}"  type="text/javascript"></script>
    <script src="{{ asset('js/delete.js') }}"  type="text/javascript"></script>
    <script src="{{ asset('js/edit.js') }}"  type="text/javascript"></script>
{% endblock %}
